{
  "compilerOptions": {
    //   "module": "esnext",
      "lib": ["es5"],
      "target": "es5",
      "downlevelIteration": true,
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "build",
      "declaration": true,
      "declarationDir": "build",
      "declarationMap": true,
      "noImplicitUseStrict": true
  },
